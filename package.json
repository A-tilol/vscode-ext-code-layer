{
	"name": "code-layers",
	"displayName": "Code Layers",
	"description": "Samples for VSCode's view API",
	"version": "0.0.1",
	"publisher": "vscode-samples",
	"enableProposedApi": true,
	"engines": {
		"vscode": "^1.42.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:codeLayers"
	],
	"main": "./out/extension.js",
	"contributes": {
		"views": {
			"explorer": [
				{
					"id": "codeLayers",
					"name": "Code Layers"
				}
			]
		},
		"commands": [
			{
				"command": "codeLayers.refreshLayer",
				"title": "Refresh a layer",
				"category": "Layer",
				"icon": "$(refresh)"
			},
			{
				"command": "codeLayers.addLayer",
				"title": "Add a layer",
				"category": "Layer",
				"icon": "$(new-file)"
			},
			{
				"command": "codeLayers.mergeLayer",
				"title": "Merge a layer",
				"category": "Layer"
			},
			{
				"command": "codeLayers.deleteLayer",
				"title": "Delete a layer",
				"category": "Layer"
			},
			{
				"command": "extension.toggleLayerVisibility",
				"title": "Toggle a Layer visibility",
				"category": "Layer"
			}
		],
		"menus": {
			"commandPalette": [],
			"view/title": [
				{
					"command": "codeLayers.refreshLayer",
					"when": "view == codeLayers",
					"group": "navigation"
				},
				{
					"command": "codeLayers.addLayer",
					"when": "view == codeLayers",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "codeLayers.mergeLayer",
					"when": "view == codeLayers && viewItem == codelayer"
				},
				{
					"command": "codeLayers.deleteLayer",
					"when": "view == codeLayers && viewItem == codelayer"
				}
			]
		},
		"configuration": []
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.45.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"@types/diff": "^4.0.2",
		"diff": "^4.0.2"
	}
}